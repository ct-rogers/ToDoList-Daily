<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To DO List</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="wrapper">
      <div class="box">
    <section class='Adds'>
      <h1>Git'er Done Today!</h1>
      <form class="form1" action="/" method="post">
        <input type="text" name="todo" value="">
        <button type="submit" action='/' name="addToDo">Add this ToDo</button>
      </form>
    </section>
    <section class='list'>
        {{#uncompleted}}
        <form class="form2" action="/markCom" method="post">
          <ul>
            <li>
              <button type="submit"  value="{{id}}" name="id">Mark Complete</button>
              <span>{{todo}}</span>
            </li>
          </ul>
        </form>
        {{/uncompleted}}
    </section>
    <section class='completed'>
        <h2>Completed To Do's</h2>
        {{#completed}}
          <p>{{todo}}</p>
        {{/completed}}
        <!-- css line through -->
    </section>
  </body>
</html>
